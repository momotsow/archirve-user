{{page-title 'User'}}
  <div class="container has-text-centered">
    <div class="column is-3 is-offset-4">

      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>

      <div class="user-profile">

        <figure class="avatar">
          <img src={{@model.image}} width="256px" alt="User" />
        </figure>

        <p class="title has-text-white my-2">
          {{@model.name}}
        </p>

        <p class="subtitle has-text-white my-2">
          Example Value:
          {{@model.value}}
        </p>
        <p class='subtitle has-text-white my-2'>
          User Archived:
          {{@model.archived}}
        </p>

        {{!-- Component to archive/unarchive users --}}
        
        <Archiving @data={{@model}} @id={{@model.id}}/>
      </div>
    </div>
  </div>
{{outlet}}
